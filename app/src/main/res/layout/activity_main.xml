<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0a8fdc"
    android:padding="10dp"
    tools:context="com.akashjpro.countriesintheworld.MainActivity">


    <Button

        android:textColor="@drawable/text_color_button"
        android:background="@drawable/button_background_format"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm Quốc Gia"
        android:id="@+id/buttonThem"
        android:allowUndo="false"
        android:textAllCaps="false" />

    <Button
        android:layout_marginTop="10dp"
        android:textColor="@drawable/text_color_button"
        android:background="@drawable/button_background_format"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh Sách Quốc Gia"
        android:id="@+id/buttonDSQuocGia"
        android:textAllCaps="false" />

    <Button
        android:layout_marginTop="10dp"
        android:textColor="@drawable/text_color_button"
        android:background="@drawable/button_background_format"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trò Chơi"
        android:textAllCaps="false" />
</LinearLayout>
