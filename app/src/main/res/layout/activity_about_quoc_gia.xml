<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:background="#e1dede"
    android:id="@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.akashjpro.countriesintheworld2809.AboutQuocGia">



        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/vietnam" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country:"
            android:layout_marginLeft="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginStart="24dp" />

        <TextView
            android:id="@+id/textViewCountry"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Vietnam"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintLeft_toRightOf="@+id/textView"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Capital:"
            android:layout_marginLeft="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginStart="24dp" />

        <TextView
            android:id="@+id/textViewCaptital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hanoi"
            app:layout_constraintTop_toTopOf="@+id/textView3"
            app:layout_constraintLeft_toLeftOf="@+id/textViewCountry" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Nationality:"
            android:layout_marginLeft="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textViewNationality"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Vietnamese"
            app:layout_constraintTop_toTopOf="@+id/textView5"
            app:layout_constraintLeft_toLeftOf="@+id/textViewCaptital" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area:"
            android:layout_marginLeft="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textViewAreal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="332.698"
            app:layout_constraintLeft_toLeftOf="@+id/textViewNationality"
            app:layout_constraintTop_toTopOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="km"
            app:layout_constraintLeft_toRightOf="@+id/textViewAreal"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/textViewAreal" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="2"
            app:layout_constraintLeft_toRightOf="@+id/textView9"
            android:layout_marginLeft="62dp"
            android:layout_marginStart="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView9"
            android:layout_marginBottom="8dp" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Population:"
            android:layout_marginLeft="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textViewpopulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="94.970.597"
            app:layout_constraintLeft_toLeftOf="@+id/textViewAreal"
            app:layout_constraintTop_toTopOf="@+id/textView11" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regions:"
            android:layout_marginLeft="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <TextView
            android:id="@+id/textViewRegions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Southeast Asia"
            app:layout_constraintLeft_toLeftOf="@+id/textViewpopulation"
            app:layout_constraintTop_toTopOf="@+id/textView14" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="GDP: "
            android:layout_marginLeft="24dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textView14" />

        <TextView
            android:id="@+id/textViewGDP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.371"
            app:layout_constraintLeft_toLeftOf="@+id/textViewRegions"
            app:layout_constraintTop_toTopOf="@+id/textView16" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:text="(Per capita)"
            app:layout_constraintLeft_toRightOf="@+id/textViewGDP"
            app:layout_constraintTop_toTopOf="@+id/textViewGDP" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="Currency:"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />

        <TextView
            android:id="@+id/textViewCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dong (VND)"
            app:layout_constraintTop_toTopOf="@+id/textView2"
            app:layout_constraintLeft_toLeftOf="@+id/textViewGDP" />

    </android.support.constraint.ConstraintLayout>


</ScrollView>

